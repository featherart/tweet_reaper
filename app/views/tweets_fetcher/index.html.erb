<h1>Tweet Reaper</h1>

<div ng-controller="twitUserCtrl">
  <form>
    <input type="text" ng-model="twitterUser.name">
    <button ng-click="reset()">RESET</button>
    <button ng-click="update(twitterUser)">SAVE</button>
  </form>
  <pre>form = {{twitterUser | json}}</pre>
  <pre>master = {{master | json}}</pre>
</div>
{{twitterUser.name}}

<% if params[:user] %>
  <h5>Here are tweets for <%= params[:user] %>
  <ul>
   <% @tweets.each do |tweet| %> 
    <li><%= tweet.text %></li>
   <% end %>
  </ul>
<% end %>

<% if params[:friend] %>
  <h5>Here are friends for <%= params[:friend] %>
  <ol>
    <% @friends.each do |friend| %>
      <li><%= friend %></li>
    <% end %>
  </ol>
<% end %>

<% if params[:friend1] && params[:friend2] %>
  <h5>Here are friends for <%= params[:friend1] %> & <%= params[:friend2] %>
  <ul>
    <% @intersection.each do |friend| %>
      <li><%= friend %></li>
    <% end %>
  </ul>
<% end %>